#include<iostream>
using namespace std;

void bubble(int [] , int);

void bubble(int a[],int n){
	int temp,i,j;
	for(i=0;i<n;i++){
		for(j=0;j<n-i-1;j++){
			if(a[j]>a[j+1]){
				temp=a[j];
				a[j]=a[j+1];
				a[j+1]=temp;
			}
		}
	}
}

int main(){
	int a[20],n,i;
	cout<<"ENTER NO. OF ELEMENTS IN AN ARRAY ! =";
	cin>>n;
	cout<<"\nENTER ARRAY ELEMENTS :";
	for(i=0;i<n;i++){
		cin>>a[i];
		
	}
	
    cout<<"\nARRAY ELEMENTS ARE :";
    for(i=0;i<n;i++){
    	 cout<<a[i]<<" ";
	}
	bubble(a , n);
    cout<<"\nsorted ARRAY ELEMENTS ARE :";
    for(i=0;i<n;i++){
    	cout<<a[i]<<" ";
	}
	
}
